doctype

html(lang='en')
  head
    title #{c.meta.title}
    meta(http-equiv="X-UA-Compatible",content="IE=Edge,chrome=1")
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height')

    block variables

    //- google
    meta(name='description',content=c.meta.description)
    meta(name='theme-color', content='#FF0000')

    //- facebook
    meta(property='og:url',content=c.url)
    meta(property='og:title',content=c.meta.title)
    meta(property='og:type',content='website')
    meta(property='og:image',content=c.url + 'img/share.png')
    meta(property='og:description',content=c.meta.description)

    //- twitter
    meta(name='twitter:card',content='summary')
    meta(name='twitter:title',content=c.meta.title)
    meta(name='twitter:description',content=c.meta.description)
    meta(name='twitter:image',content=c.url + 'img/share.png') 

    // icons
    link(rel="apple-touch-icon", sizes="57x57", href="#{rootdir}ico/apple-touch-icon-57x57.png")
    link(rel="apple-touch-icon", sizes="114x114", href="#{rootdir}ico/apple-touch-icon-114x114.png")
    link(rel="apple-touch-icon", sizes="72x72", href="#{rootdir}ico/apple-touch-icon-72x72.png")
    link(rel="apple-touch-icon", sizes="144x144", href="#{rootdir}ico/apple-touch-icon-144x144.png")
    link(rel="apple-touch-icon", sizes="60x60", href="#{rootdir}ico/apple-touch-icon-60x60.png")
    link(rel="apple-touch-icon", sizes="120x120", href="#{rootdir}ico/apple-touch-icon-120x120.png")
    link(rel="apple-touch-icon", sizes="76x76", href="#{rootdir}ico/apple-touch-icon-76x76.png")
    link(rel="apple-touch-icon", sizes="152x152", href="#{rootdir}ico/apple-touch-icon-152x152.png")
    link(rel="icon", type="image/png", href="#{rootdir}ico/favicon-192x192.png", sizes="192x192")
    link(rel="icon", type="image/png", href="#{rootdir}ico/favicon-160x160.png", sizes="160x160")
    link(rel="icon", type="image/png", href="#{rootdir}ico/favicon-96x96.png", sizes="96x96")
    link(rel="icon", type="image/png", href="#{rootdir}ico/favicon-16x16.png", sizes="16x16")
    link(rel="icon", type="image/png", href="#{rootdir}ico/favicon-32x32.png", sizes="32x32")

    meta(name="msapplication-TileColor", content="#ffffff")
    meta(name="msapplication-TileImage", content="#{rootdir}ico/mstile-144x144.png")

    link(rel='stylesheet',href="#{rootdir}css/main.css",type='text/css',media='all')

    //script(src="http://use.typekit.net/dul0svi.js")
    //script.
    //  try{Typekit.load();}catch(e){}
    link(rel='stylesheet',href="#{rootdir}css/fonts.css",type='text/css',media='all')

    script(type='text/javascript', src='#{rootdir}jst/loader.js')

    // aws
    script(src="https://sdk.amazonaws.com/js/aws-sdk-2.1.8.min.js")

    script.
      Loader.root = '#{rootdir}';

  body
    block content
    include status


    block script 

   
      script(type='text/javascript').

        Loader.scripts.jst_lib.push('jquery.min');
        Loader.scripts.jst.push('status');
        Loader.scripts.jst.push('main');
        Loader.scripts.jst.push('global');

        Loader.i( function(result) {

          if (result) {

            if (typeof(loadercomplete) === 'function') {
              loadercomplete();
            }

          }

        });


        var _gaq = _gaq || [];
        var pluginUrl = '//www.google-analytics.com/plugins/ga/inpage_linkid.js';
        _gaq.push(['_require', 'inpage_linkid', pluginUrl]);
        _gaq.push(['_setAccount', '#{c.analytics}']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();


