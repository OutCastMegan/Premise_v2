.mobilemenu
  display none
.hamburger
  display none
.header
  position fixed
  width 100%
  z-index 10
  background-color rgba(c_mono0, 0.8)
  font-size aitw(14)
  > .inner
    padding 0 60px
    max-width 1440px
    margin auto
    > .logo
      float left
      width 166px
      height 60px
      > svg
        margin 7.5px
        width 145px
        height 45px
        /*
        > g > g > g > path
          //fill c_white
        > g > path
          fill c_white
        */
        > rect.logorect
          //animation rectin 0.2s 0.2s ease-in-out both

    > .menu
      float right
      > .item
        cursor pointer
        float left
        padding 0 15px
        height 60px
        text-align center
        color c_white
        transition background-color 0.1s linear
        position relative
        animation itemin 0.2s 0s ease-in-out both
        for i in 0..6
          &:nth-child({i+1})
            animation-delay unit(i*0.05, 's')
        &:hover
          background-color c_blue
          > .copy.bordered
            border 2pt solid c_white
        &.active > .copy
          color c_blue
        &:hover.active > .copy
          color c_white
        
        &:hover > .submenu
          opacity 1
          transform translate(0, 0)
          transition opacity 0.2s linear, transform 0s 0s
        &:hover > .submenu > .item:nth-child(1)
          transform translate(0, 0)
          transition transform 0.1s linear
        &:hover > .submenu > .item:nth-child(2)
          transform translate(0, 0)
          transition transform 0.15s linear
        &:hover > .submenu > .item:nth-child(3)
          transform translate(0, 0)
          transition transform 0.2s linear
        &:hover > .submenu > .item:nth-child(4)
          transform translate(0, 0)
          transition transform 0.25s linear
        &:hover > .submenu > .item:nth-child(5)
          transform translate(0, 0)
          transition transform 0.3s linear
        > .copy
          float left
          height 30px
          margin 15px 0
          padding 0 10px
          line-height 30px
          color c_white
          text-decoration none
          &.bordered
            border 2pt solid c_blue
        > .carrot
          float left
          width 16px
          height 16px
          margin 22px 0 0 0
          > svg
            width inherit
            height inherit
            > path
              stroke c_white
        > .submenu
          opacity 0
          position absolute
          width 100%
          top 60px
          left 0px
          transition opacity 0.2s linear, transform 0s 0.5s
          transform translate(0, -240px)
          > .item
            display block
            width 100%
            background-color rgba(c_mono0, 0.8)
            height 60px
            line-height 60px
            color c_white
            text-decoration none
            &:hover
              background-color c_blue
            &:nth-child(1)
              transform translate(0, -62px)
              transition transform 0.1s linear 0.2s
            &:nth-child(2)
              transform translate(0, -124px)
              transition transform 0.2s linear 0
            &:nth-child(3)
              transform translate(0, -186px)
              transition transform 0.2s linear 0
            &:nth-child(4)
              transform translate(0, -248px)
              transition transform 0.2s linear 0
            &:nth-child(5)
              transform translate(0, -310px)
              transition transform 0.2s linear 0
 
         
.dots
  position fixed
  top 50%
  right 0
  margin-top -72px
  width 45px
  height 250px
  background-color rgba(c_mono0, 0.8)
  z-index 10
  > .inner
    > .dot
      display block
      position relative
      cursor pointer
      padding 17px
      &.active > .inner
        background-color c_blue
      &:hover
        background-color rgba(c_mono0, 1)
        > .inner
          background-color c_mono2
      > .inner
        display block
        border 2px solid c_white
        border-radius 50%
        width 12px
        height 12px
        transition background-color 0.1s linear
        > .label
          opacity 0
          position absolute
          top 0px 
          right 40px
          background-color rgba(c_mono0, 0.8)
          color c_white
          text-align right
          padding 15px 17px
          transform translate(20px, 0)
          transition transform 0.1s linear, opacity 0.1s linear
          white-space nowrap
          > .copy
            transform translate(10px, 0)
            transition transform 0.1s linear 0.05s, opacity 0.1s linear 0.05s
            opacity 0
      &:hover  > .inner > .label
        opacity 1
        transform translate(0, 0)
        > .copy
          opacity 1
          transform translate(0, 0)

@keyframes itemin
  from
    transform translate(0, -10px)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1

@keyframes rectin
  from
    transform translate(-30px, 0)
  to
    transform translate(0, 0)

