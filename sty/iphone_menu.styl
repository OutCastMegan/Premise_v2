
> .fade
  position fixed
  background-color rgba(black 0.5)
  width 100%
  height 100%
  z-index 5
  top 0
  left 0
  &.on
    display block
  &.off
    display none


> .header
  > .inner
    padding 0 0 0 10px
    position relative

    > .hfade
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      background-color rgba(black, 0.5)
      &.off
        display none
      &.on
        display block

    > .logo
      width 130px
      height 45px
      > svg
        margin 2px 10px
        width 110px
        height 44px
    > .menu
      display none
    > .hamburger
      position absolute
      top 0
      right 0
      padding 7px 15px
      float right
      display block
      width 25px
      height 30px
      transition transform 0.2s linear, background-color 0.1s linear 0.2s
      z-index 30
      &.on
        background-color c_mono1
        transform rotate(180deg)
        > .line:first-child
          transform rotate(-45deg) translate(-3px, 6px)
        > .line:nth-child(2)
          opacity 0
        > .line:last-child
          transform rotate(45deg) translate(-5px, -8px)
      &.off
        background-color none
        transition transform 0.2s linear, background-color 0s linear 0s
      > .line
        height 3px
        background-color c_white
        margin 5px 0
        transition transform 0.2s linear 0, opacity 0.1s linear 0
        border-radius 5px

     
    > .mobilemenu
      z-index 20
      overflow hidden
      position absolute
      top 0px
      padding 44px 0 0 0
      right 0
      width 220px
      height 1200px
      background-color c_mono1
      display block
      transition transform 0.2s linear 0, opacity 0.2s linear 0
      font-size aitw(16)
      &.on
        opacity 1
        transform translate(0, 0)
      &.off
        opacity 0.5
        transform translate(220px, 0)
      > .inner
        position relative
        > .page
          position absolute
          width 220px
          height 100%
          top 0
          right 0
          transition transform 0.2s linear 0, opacity 0.2s linear 0
          &.off
            opacity 0
            transform translate(220px, 0)
          &.on
            opacity 1
            transform translate(0, 0)
          > .item
            text-decoration none
            height 60px
            display block
            background-color c_mono1
            line-height 60px
            padding 0 18px 0 40px
            &:hover
              background-color c_blue
            > .copy
              color c_white
            > .carrot
              float right
              width 20px
              height 20px
              transform rotate(-90deg)
              padding 10px
              margin 10px 0 0 0
              &.left
                transform rotate(90deg)
                float left
              > svg
                width inherit
                height inherit
                > path
                  stroke c_white
> .footer
  padding 10px 0
  > .inner
    padding 0 10px
