      top -100%
      left -100%
    */

    > .special
      position absolute
      bottom 12px
      right 10px
      width 30px
      height 30px
      &.casestudy
        bottom 0px
        right 12px
        color c_white
        width 103px
        letter-spacing 1px
        f-proxc-bold()
        text-shadow 0px 0px 3px c_black
        text-align right
      > svg
        width inherit
        height inherit
        > polygon
          fill c_white

    > .boxen
      width 100%
      height 100%
      background-color c_mono1
      transition opacity 0.1s linear
      position absolute
      opacity 0.1
 
      > .cinner
        position absolute
        display table
        width 100%
        height 100%
        > .copy
          display table-cell
          vertical-align middle
          text-align center
          color white
          font-size aitw(16)
          opacity 0
          transition opacity 0.2s linear
          padding 0 27px
    
      > .box
        float left
        width 30%
        height 30%
        margin 10%
        position relative
        > .inner
          position absolute
          width 60%
          height 60%
          transition opacity 0.2s linear, transform 0.2s linear
          opacity 0
          z-index 5
        &:nth-child(1) > .inner
          border-top 2pt solid c_white
          border-left 2pt solid c_white
          transform translate(-10px, -10px)
          top 0
          left 0
        &:nth-child(2) > .inner
          top 0
          right 0
          border-top 2pt solid c_white
          border-right 2pt solid c_white
          transform translate(10px, -10px)
        &:nth-child(3) > .inner
          border-bottom 2pt solid c_white
          border-left 2pt solid c_white
          transform translate(-10px, 10px)
          bottom 0
          left 0
        &:nth-child(4) > .inner
          border-bottom 2pt solid c_white
          border-right 2pt solid c_white
          transform translate(10px, 10px)
          bottom 0
          right 0
    
    for num in 1..18
      &.cell{num}
        background-image url('../img/grid/grid' + num + '.png')


