
.grid
  max-width 1440px
  margin auto
  padding 30px 0 0 0
  > .cell
    display block
    position relative
    float left
    width 16.6vw
    height 16.6vw
    max-height 240px
    max-width 240px
    cursor pointer
    background-size contain
    &:hover > .boxen > .cinner > .copy
      opacity 1
    &:hover > .special
      opacity 0
    &:hover > .boxen
      opacity 0.9
      background-color c_black
    &:hover > .boxen > .box > .inner
      opacity 0
      // opacity 0.8 -- border removal based on request
      background-color c_black
      transition opacity 0.2s linear, transform 0.1s linear 0.1s
      &:nth-child(1), &:nth-child(2), &:nth-child(3), &:nth-child(4)
        transform translate(0, 0)

    /*
